  "license": "MIT",
  "dependencies": {
    "bson": "^4.7.0",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "http-status": "^1.5.3"
  },
  "devDependencies": {
    "@types/cucumber": "^7.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cucumber": "^6.0.7",
    "eslint": "^8.27.0",
    "eslint-plugin-react": "^7.31.10",
    "jest": "^29.3.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
